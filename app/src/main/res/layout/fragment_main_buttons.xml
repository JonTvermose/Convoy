<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="gruppe3.convoy.MainButtonsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="#7cd175">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:id="@+id/imageFood"
                android:layout_column="0"
                android:src="@drawable/food_t"
                android:scaleType="fitCenter"
                android:padding="1dp"
                android:background="#ffffff"
                android:layout_marginRight="5dp" />

            <ImageView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/imageWc"
                android:layout_column="1"
                android:src="@drawable/wc_t"
                android:scaleType="fitCenter"
                android:padding="1dp"
                android:background="#ffffff"
                android:layout_marginLeft="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:id="@+id/imageBed"
                android:layout_column="0"
                android:src="@drawable/bed_t"
                android:scaleType="fitCenter"
                android:padding="1dp"
                android:background="#ffffff"
                android:layout_marginRight="5dp" />

            <ImageView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/imageBath"
                android:layout_column="1"
                android:src="@drawable/bath_t"
                android:scaleType="fitCenter"
                android:padding="1dp"
                android:background="#ffffff"
                android:layout_marginLeft="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:id="@+id/imageFuel"
                android:layout_column="0"
                android:src="@drawable/fuel_t"
                android:scaleType="fitCenter"
                android:padding="1dp"
                android:background="#ffffff"
                android:layout_marginRight="5dp" />

            <ImageView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/imageAdblue"
                android:layout_column="1"
                android:src="@drawable/adblue_t"
                android:scaleType="fitCenter"
                android:padding="1dp"
                android:background="#ffffff"
                android:layout_marginLeft="5dp" />
        </TableRow>
    </TableLayout>

</FrameLayout>
