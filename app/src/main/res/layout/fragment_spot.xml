<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gruppe3.convoy.SpotFragment"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/grey_200"
        android:alpha="0.8">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Q8, Hamborg"
            android:id="@+id/title_TextView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:fontFamily="sans-serif-medium"
            android:layout_margin="16dp"
            android:textSize="24dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/close_imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_clear_black_48dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="0dp"
            android:paddingRight="0dp"/>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_TextView"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout1"
        android:weightSum="3">

            <ImageView
                android:layout_width="0px"
                android:layout_height="50dp"
                android:id="@+id/wc_imageView"
                android:layout_weight="1"
                android:elevation="1dp"
                />

            <ImageView
                android:layout_width="0px"
                android:layout_height="50dp"
                android:id="@+id/bed_imageView"
                android:layout_weight="1"
                android:elevation="1dp"
                />

            <ImageView
                android:layout_width="0px"
                android:layout_height="50dp"
                android:id="@+id/adblue_imageView"
                android:layout_weight="1"
                android:elevation="1dp"
                />
            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:id="@+id/linearLayout2"
            android:weightSum="3">

            <ImageView
                android:layout_width="0px"
                android:layout_height="50dp"
                android:id="@+id/food_imageView"
                android:layout_weight="1"
                android:elevation="1dp"
                />


            <ImageView
                android:layout_width="0px"
                android:layout_height="50dp"
                android:id="@+id/fuel_imageView"
                android:layout_weight="1"
                android:elevation="1dp"
                />

            <ImageView
                android:layout_width="0px"
                android:layout_height="50dp"
                android:id="@+id/bath_imageView"
                android:layout_weight="1"
                android:elevation="1dp"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:id="@+id/linearLayout3"
            android:weightSum="5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Searching route..."
                android:id="@+id/distance_textView"
                android:layout_weight="5"
                android:fontFamily="sans-serif-medium"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                android:layout_margin="20dp"/>

             </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="FIND ROUTE"
            android:id="@+id/findRoute_button"
            android:layout_below="@+id/linearLayout3"
            android:layout_centerHorizontal="true"
            android:layout_margin="25dp"
            android:padding="16dp"
            android:height="24dp"
            android:elevation="2dp"

            />

    </RelativeLayout>
</FrameLayout>
